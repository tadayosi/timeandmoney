<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="example.doctorAppointments.Appointment" table="APPOINTMENT">
        <id name="idForPersistentMapping" column="ID">
            <generator class="increment"/>
        </id>
		<component name="timeIntervalForPersistentMapping" class="com.domainlanguage.time.TimeInterval">
        	<component name="lowerLimitForPersistentMapping" class="com.domainlanguage.time.TimePoint">
				<property name="millisecondsFromEpocForPersistentMapping" column="LOWER_LIMIT"/>
			</component>
        	<property name="includesLowerLimitForPersistentMapping" column="INCLUDES_LOWER_LIMIT"/>
        	<component name="lowerLimitForPersistentMapping" class="com.domainlanguage.time.TimePoint">
				<property name="millisecondsFromEpocForPersistentMapping" column="UPPER_LIMIT"/>
			</component>
			<property name="includesUpperLimitForPersistentMapping" column="INCLUDES_UPPER_LIMIT"/>
    	</component>
    </class>
</hibernate-mapping>